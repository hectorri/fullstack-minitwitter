<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
		<td><%= link_to 'Show', "javascript:show_user(#{user.id})" %></td>
		<td><%= link_to 'Edit popup', "javascript:edit_user(#{user.id})" %></td>
		<td><%= link_to 'Show posts', "javascript:microposts_user(#{user.id})" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

<div id ="show"style="display:none" >
	<p>
		<strong>Name:</strong>
		<p id="name"></p>
	</p>
	<p>
		<strong>Email:</strong>
		<p id="email"></p>
	</p>
</div>

<div id ="microposts_user"style="display:none" >
</div>

<div id="edit" style="display:none">
</div>